{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Peek JSON AI Access Manifest",
  "type": "object",
  "properties": {
    "peek_then_pay": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },

        "meta": {
          "type": "object",
          "properties": {
            "site_name": { "type": "string" },
            "publisher": { "type": "string" },
            "categories": {
              "type": "array",
              "items": { "type": "string" }
            },
            "last_updated": { "type": "string", "format": "date" }
          },
          "required": ["site_name", "publisher", "categories", "last_updated"]
        },

        "intents": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "allowed": { "type": "boolean" },
              "peek_max_tokens": { "type": "integer" },
              "peek_fields": {
                "type": "array",
                "items": { "type": "string" }
              },
              "license_required": { "type": "boolean" }
            },
            "required": ["allowed", "peek_max_tokens", "peek_fields", "license_required"]
          }
        },

        "license": {
          "type": "object",
          "properties": {
            "required_for_full": { "type": "boolean" },
            "terms_url": { "type": "string", "format": "uri" },
            "pricing_api": { "type": "string", "format": "uri" },
            "token_header": { "type": "string" },
            "validation_endpoint": { "type": "string", "format": "uri" }
          },
          "required": ["required_for_full", "terms_url"]
        },

        "crawler_rules": {
          "type": "object",
          "properties": {
            "allowed_user_agents": {
              "type": "array",
              "items": { "type": "string" }
            },
            "rate_limit_per_day": { "type": "integer" },
            "usage_logging_required": { "type": "boolean" },
            "required_headers": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "required": []
        },

        "capabilities": {
          "type": "object",
          "properties": {
            "structured_format": {
              "type": "string",
              "enum": ["HTML", "JSON", "schema.org"]
            },
            "has_schema_annotations": { "type": "boolean" },
            "watermarking": { "type": "boolean" }
          },
          "required": []
        }
      },
      "required": ["version", "meta", "intents", "license"]
    }
  },
  "required": ["peek_then_pay"]
}
