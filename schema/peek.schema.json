{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Peek JSON AI Access Manifest",
  "type": "object",
  "required": ["version", "meta", "license"],
  "properties": {
    "version": {
      "type": "string"
    },
    "meta": {
      "type": "object",
      "required": ["site_name", "publisher", "categories", "last_updated"],
      "properties": {
        "site_name": { "type": "string" },
        "publisher": { "type": "string" },
        "categories": {
          "type": "array",
          "items": { "type": "string" }
        },
        "last_updated": { "type": "string", "format": "date" }
      }
    },
    "license": {
      "type": "object",
      "required": ["license_issuer", "terms_url", "pricing"],
      "properties": {
        "license_issuer": {
          "type": "string",
          "format": "uri",
          "description": "Endpoint to request or inspect a license and remaining budget."
        },
        "terms_url": {
          "type": "string",
          "format": "uri",
          "description": "Link to the legal terms and conditions for content licensing."
        },
        "pricing": {
          "type": "object",
          "required": ["default_per_page", "max_per_page"],
          "properties": {
            "default_per_page": {
              "type": "number",
              "description": "The default price (USD) for any page that does not specify an override."
            },
            "max_per_page": {
              "type": "number",
              "description": "Maximum allowable price (USD) for any single page, regardless of override."
            },
            "currency": {
              "type": "string",
              "description": "Currency used for all pricing (default: 'USD').",
              "default": "USD"
            },
            "override_mechanism": {
              "type": "string",
              "enum": ["header", "402-response", "both"],
              "default": "both",
              "description": "Mechanism(s) by which a page may declare a price override from the default_per_page."
            },
            "override_header_name": {
              "type": "string",
              "default": "X-Peek-Page-Cost",
              "description": "Header used by the server to signal an overridden per-page cost."
            }
          }
        }
      }
    }
  }
}
